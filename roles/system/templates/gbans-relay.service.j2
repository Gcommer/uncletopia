[Unit]
Description=gbans log relay
After=network.target

[Service]
User=tf2server
Group=tf2
WorkingDirectory=/home/tf2server
ExecStart=/home/tf2server/gbans/gbans relay -n "{{ server_name_short }}" -H {{ gbans_host }}:{{ gbans_port }} -l /home/tf2server/serverfiles/tf/logs
Restart=always

[Install]
WantedBy=multi-user.target
